@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Thapelo Motubatse - Tax Calculator</h1>
    <p>Please your postal code and your annual cost to company below</p>
</div>

<form>
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Postal Code" id="postalCode" name="postalCode">
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Annual Anount" id="annualIncome" name="annualIncome">
        </div>
    </div>
    <div class="row mt-3">
        <div class="form-group">
            <div class="btn-submit">
                <input id="btn_Submit" onclick="submitForm(this.form)" class="btn btn-primary btn-block right" value="Submit">
            </div>
        </div>
    </div>
</form>

<h1 class="fw-bold mt-3"  id="calculatedValue"></h1>

